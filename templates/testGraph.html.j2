{% extends "layoutBase.html.j2" %}
{% block title %}SCADA vs SEM PLOT{% endblock %}

{% block head %}
{{ super() }}
{% endblock %}

{% block content %}
<style type='text/css'>
    h1 {
    color : black;
    }
    h3 {
    color : black;
    border: 0.4rem solid transparent;
    /* width: 8em;
    height: 10em; */
    max-height: 30em;
    overflow: auto;
    font-size: 1.5rem;
    padding: 1rem;
    }
</style>
<h1><strong>Display Scada vs Sem Graph</h1>
<form class="form" method="POST">
    <div class="form-row">
        <div class="form-group col-md-6">
        <label for="startDate">Start Date</label>
        <input type="date" class="form-control bg-light border-1 mr-2" name = "startDate" id="startDate" {% if startDate %} value="{{startDate}}" {% endif %}>
        </div>
        <div class="form-group col-md-6">
        <label for="endDate">End Date</label>
        <input type="date" name = "endDate" class="form-control" id="endDate" {% if endDate %} value="{{endDate}}" {% endif %}>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="col">Select Attribute</label>
            <select class="chosen-select" name="col" id="col">
                <option value="">Choose Location</option>
                <option value="DN1">DN1</option>
                <option value="CS1">CS1</option>
                <option value="DD1">DD1</option>
                <option value="ER1">ER1</option>
                <option value="GO1">GO1</option>
                <option value="GU1">GU1</option>
                <option value="GU2">GU2</option>
                <option value="GU8">GU8</option>
                <option value="MH1">MH1</option>
                <option value="MH2">MH2</option>
                <option value="MH6">MH6</option>
                <option value="MH9">MH9</option>
                <option value="MP2">MP2</option>
                <option value="NR1">NR1</option>
                <option value="SR1">SR1</option>
                <option value="HZ1">HZ1</option>
                <option value="BR1">BR1</option>
            </select>
        </div>
    </div>
    <input type="submit" class = "btn btn-success" value="submit">
</form>

{# {% if data %}
    <h3><p>Attribute: {{scadaSem}}</p></h3>
{% endif %} #}

<div id='scadaSemDiv'></div>

{% block scripts %}
<script src="static/app/multiSelect.js"></script>
<script src="static/app/plotly-latest.min.js"></script>
<script src="static/node_modules/plotly.js-dist/plotly.js"></script>
{% if data %}
    <h3><p>Error Percentage: {{errorPerc}}<br>State: {{stateName}}</p></h3>
    {% set dfData = data %}
    <script>
        var dfData_g = {{ dfData|safe }};
        window.onload = function() {
            loadPlotData();
        }
    </script>
    <script src="static/app/index.js"></script>
    <script src="static/node_modules/plotly.js-dist/plotly.js"></script>
    <link rel="stylesheet" href="static/node_modules/chosen-js/chosen.min.css">
    <script src="static/node_modules/chosen-js/chosen.jquery.min.js"></script>
    <script src="static/app/plotly.min.js"></script>
    <link rel="stylesheet" href="jquery.dropdown.css">
    <script src="jquery.dropdown.js"></script>
{% endif %}
    <script src="static/app/multiSelect.js"></script>
    <style>
        thead input {
            padding: 2px;
            box-sizing: border-box;
            font-size: small;
            width: 100%
        }
    </style>

{% endblock %}


{% endblock %}

